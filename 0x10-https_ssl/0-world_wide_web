#!/usr/bin/env bash
# Configure your domain zone.

# Function to perform DNS lookup and print results
dns_lookup() {
    local domain="$1"
    local subdomain="$2"

    dig "$subdomain.$domain" > output.txt
    echo "The subdomain '$subdomain' is a '$(awk 'NR==13 { print $4 }' < output.txt)' record and points to '$(awk 'NR==13 { print $5 }' < output.txt)'"
}

# Main script logic
if [ "$#" -eq 2 ]; then
    dns_lookup "$1" "$2"
else
    dns_lookup "$1" www
    dns_lookup "$1" lb-01
    dns_lookup "$1" web-01
    dns_lookup "$1" web-02
fi
