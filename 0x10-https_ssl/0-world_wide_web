#!/usr/bin/env bash
# Configure your domain zone.

domain="$1"
subdomain="$2"

if [ "$#" -eq 2 ]; then
    dig "$subdomain"."$domain" > output.txt
    echo "The subdomain '$2' is a '$(awk 'NR==13 { print $4 }' < output.txt)' record and points to '$(awk 'NR==13 { print $5 }' < output.txt)'"
else
    dig www."$domain" > output.txt
    echo "The subdomain www is a '$(awk 'NR==13 { print $4 }' < output.txt)' record and points to '$(awk 'NR==13 { print $5 }' < output.txt)'"
    dig lb-01."$domain" > output.txt
    echo "The subdomain lb-01 is a '$(awk 'NR==13 { print $4 }' < output.txt)' record and points to '$(awk 'NR==13 { print $5 }' < output.txt)'"
    dig web-01."$domain" > output.txt
    echo "The subdomain web-01 is a '$(awk 'NR==13 { print $4 }' < output.txt)' record and points to '$(awk 'NR==13 { print $5 }' < output.txt)'"
    dig web-02."$domain" > output.txt
    echo "The subdomain web-02 is a '$(awk 'NR==13 { print $4 }' < output.txt)' record and points to '$(awk 'NR==13 { print $5 }' < output.txt)'"
fi
